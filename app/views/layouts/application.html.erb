<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
	"http://www.w3.org/TR/html4/strict.dtd">

<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>Ventwits</title>
		
		<%= stylesheet_link_tag "blueprint/screen", "global" %>
		<%= javascript_include_tag :defaults, 'jeditable' %>
		
		<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
	</head>

	<body>
		<div id="header">
			<div class="vtcontainer">
				<div id="user-nav" class="vtspan-8">
					<%- if logged_in? -%>
						Hello, <%= current_user.screen_name %> | 
						<%= link_to "Log Out", logout_path %>
					<%- end -%>
				</div>
				<div class="vtspan-2"><h1><%= link_to "Ventwits", root_path %></h1></div>

				<div id="main-nav" class="vtspan-3">
					<%= link_to 'All Ventures', '/' %>
					<%= link_to 'My Ventures', logged_in? ? user_path(current_user) : login_path %>
				</div>
			
				<div class="vtspan-3 vtlast">
					<%- form_tag('search') do -%>
						<%= text_field_tag 'search' %>
						<%= submit_tag 'Search' %>
					<%- end -%>
				</div>
			</div>
		</div>

		<div class="vtcontainer">
			<div class="system-messages">
        <%= flash[:notice] %>
      </div>
			<%= yield %>
		</div>
		<div id="footer">
			<div class="vtcontainer">
				<div class="vtspan-2">Ventwits</div>
				<div class="vtspan-6 vtlast"><%= link_to "About", "/info/about" %> &bull; <%= link_to "Blog" %> &bull; <%= link_to "Terms of Service", "/info/terms" %> &bull; <%= link_to "Privacy Policy", "/info/privacy" %> &bull; <%= link_to "Contact Us", "/info/contact" %></div>
			</div>
		</div>
	</body>
</html>