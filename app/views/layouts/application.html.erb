<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
	"http://www.w3.org/TR/html4/strict.dtd">

<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>VenTwits</title>
		<link rel="shortcut icon" href="/favicon.ico" />
		<%= stylesheet_link_tag "blueprint/screen", "global", "peter" %>
		<%= javascript_include_tag :defaults, 'jeditable', 'jdelay' %>
		
		<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
	</head>

	<body>
		<div id="header" class="">
			<div class="vtcontainer vtclearfix">
				<div class="vtspan-6 topBorder">&nbsp;</div>
				<div id="top-bar" class="vtspan-2 vtlast">
					<div id="user-nav" >
						<%- if logged_in? -%>
							Hello, <%= current_user.screen_name %> | <%= link_to "Log Out", logout_path %>
						<%- else -%>
							Hello, <%= link_to "Log In", login_path %>
						<%- end -%>
					</div>		
				</div>
				
				<div class="vtspan-5"><a href="/"><h1 id="logo">VenTwits</h1></a></div>

				<div id="main-nav" class="vtspan-3 vtlast">
					<%= link_to 'All Ventures', '/' %>
					<%= link_to 'My Ventures', logged_in? ? user_path(current_user) : login_path %>
				</div>
			
				<br class="clear">
			</div>
		</div>

		<div class="vtcontainer">
			<div class="system-messages">&nbsp;
				<%- if !flash[:notice].blank? -%><p class="message"><%= flash[:notice] %></p><%- end -%>
				<%- if !flash[:error].blank? -%><p class="error"><%= flash[:error] %></p><%- end -%>
      </div>
		</div>

		<%= yield %>

		<div id="footer">
			<div class="vtcontainer">
				<div class="vtspan-2">VenTwits</div>
				<div class="vtspan-6 vtlast"><%= link_to "About", "/info/about" %> &bull; <%= link_to "Terms of Service", "/info/terms" %> &bull; <%= link_to "Privacy Policy", "/info/privacy" %> &bull; <%= link_to "Contact Us", "/info/contact" %></div>
			</div>
		</div>
	</body>
</html>