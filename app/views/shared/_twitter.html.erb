<% if !logged_in? -%>
	<%- if params[:action] == "index" && params[:controller] == "ventures" -%>
		<div class="vtspan-3 vtlast">
	<%- else -%>
		<div class="vtspan-5">
	<%- end -%>
  	<div id="twitter">
      <%= render :partial => 'shared/login' %>
		</div>
	</div>
<% else %>
 <% call_to_action = call_to_action || "What are you building?" %>
		<div class="vtspan-5">
			<div id="twitter">
  			<h4><%= call_to_action %></h4>
  			<%= render :partial => 'shared/tweet_box', :locals => {:initial_value => initial_value} %>
			</div>
  </div>
<% end %>
