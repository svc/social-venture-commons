<%= render :partial => 'shared/twitter',:locals=>{:initial_value=>''} %>	

<div id="profile" class="vtspan-3  vtclearfix">
  <h3><%=h @user.name %></h3>
	<%= image_tag('test_avatars/default.png') %>
	<div class="data">
	  <%- unless @user.description.empty? -%><p><span class="label">Bio</span> <%=h @user.description %></p><%- end -%>
	  <%- unless @user.url.empty? -%><p><span class="label">Url</span> <%= link_to @user.url,@user.url %></p><%- end -%>
	</div>
</div>

<hr>

<div class="vtcolumn vtspan-5">
	<%= render :partial => 'shared/message_feed', :locals =>{:messages => @user.messages} %>
</div>

<div class="vtcolumn vtspan-3 vtlast">
	<div id="additional-content" class="vtspan-3 vtlast">
		<div class="vtspan-3 ">
				<h3>My Needs</h3>
				<ul>
				  <%- @user.needs.each do |n| -%>
				    <li><%= link_to n,n %></li>
				  <%- end -%>
				</ul>
		</div>
		<div class="vtspan-3 ">
				<h3>New Opportunities</h3>
				<ul>
				  <%- #@user.ventures.each do |v| -%>
				    <li><%#= link_to v,v %></li>
				  <%- #end -%>
				</ul>
		</div>
	</div>
</div>