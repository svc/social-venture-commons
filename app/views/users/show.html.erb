<%= render :partial => 'shared/twitter',:locals=>{:initial_value=>''} %>	

<div id="profile" class="vtspan-3 vtlast vtclearfix">
  <h3><%= @user.screen_name %></h3>
	<div class="data">
	  <%- unless @user.description.empty? -%><p><span class="label">Bio</span> <%= @user.description %></p><%- end -%>
	  <%- unless @user.url.empty? -%><p><span class="label">Url</span> <%= link_to @user.url,@user.url %></p><%- end -%>
	</div>
</div>

<hr>

<div class="vtcolumn vtspan-5">
	<%= render :partial => 'shared/message_feed', :locals =>{:messages => @user_messages} %>
</div>

<div class="vtcolumn vtspan-3 vtlast">
	<div id="additional-content" class="vtspan-3 vtlast">
		<div class="vtspan-3 ">
			<h3>Threads</h3>
			<ul>
			  <%- @user.needs(:limit=>20).each do |n| -%>
			    <li><%= link_to n, n %></li>
			  <%- end -%>
			</ul>
		</div>
		<div class="vtspan-3 ">
			<h3>Ventures</h3>
			<ul>				
				<% @user.ventures(:limit=>20).each do |v| %>
					<li><%= link_to v.tag, v %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>